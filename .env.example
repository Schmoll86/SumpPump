# TWS Connection Settings
TWS_HOST=127.0.0.1
TWS_PORT=7497
TWS_CLIENT_ID=1
TWS_ACCOUNT=  # Your IBKR account ID

# MCP Server Settings
MCP_SERVER_NAME=sump-pump
MCP_SERVER_PORT=8765
MCP_LOG_LEVEL=INFO

# Market Data Settings
MARKET_DATA_TIMEOUT=30
OPTIONS_CHAIN_CACHE_TTL=300  # 5 minutes
HISTORICAL_DATA_DURATION=30 D
BAR_SIZE_SETTING=1 hour

# Risk Management
MAX_POSITION_SIZE_PERCENT=5.0
DEFAULT_STOP_LOSS_PERCENT=10.0
REQUIRE_CONFIRMATION=true
MIN_OPTION_VOLUME=10
MIN_OPEN_INTEREST=50

# Data Sources - Real-Time Market Data
USE_DELAYED_DATA=false

# Level 2 Depth of Book (IEX Feed)
USE_LEVEL2_DEPTH=true
DEPTH_PROVIDER=IEX
MAX_DEPTH_LEVELS=10
USE_SMART_DEPTH=true

# Index Trading (CME S&P, NASDAQ Indices)
ENABLE_INDEX_TRADING=true
INDEX_EXCHANGES=CBOE,CME,NASDAQ

# Cryptocurrency (ZEROHASH/PAXOS)
USE_CRYPTO_FEED=false  # Enable if you want crypto trading
CRYPTO_EXCHANGE=PAXOS
CRYPTO_SYMBOLS=BTC,ETH,SOL,LINK,UNI

# Forex Trading (IDEALPRO)
USE_FX_FEED=false  # Enable if you want forex trading
FX_EXCHANGE=IDEALPRO
FX_PAIRS=EURUSD,GBPUSD,USDJPY,AUDUSD,USDCAD

# Bond Trading
USE_BOND_FEED=false  # Enable if you want bond trading

# News Feeds (Premium Subscriptions)
SUBSCRIBE_TO_NEWS=true
NEWS_PROVIDERS=dow_jones,reuters,benzinga,fly_on_the_wall
USE_REALTIME_NEWS=true
NEWS_BULLETIN_SUBSCRIPTION=true

# Cache Settings
CACHE_TYPE=sqlite  # or redis
CACHE_DB_PATH=./cache/session_data.db
REDIS_URL=redis://localhost:6379/0  # If using Redis

# Logging
LOG_FILE_PATH=./logs/sump_pump.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_FORMAT=json

# Development
DEBUG_MODE=false
TEST_MODE=false
MOCK_TWS_CONNECTION=false

# Optional: TradingView Integration
TRADINGVIEW_ENABLED=false
TRADINGVIEW_WEBHOOK_PORT=8080

# Optional: Notification Settings
ENABLE_NOTIFICATIONS=false
NOTIFICATION_WEBHOOK_URL=
